<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.GridLayout
            android:id="@+id/gridWinMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true"
            android:layout_marginStart="50dp" android:layout_alignParentLeft="true"
            android:layout_marginTop="150dp" android:layout_marginBottom="150dp" android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:columnCount="7" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginEnd="50dp">

        <TextView
                android:text="@string/winnerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/winnerTextView"
                android:textSize="22sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black" android:textStyle="bold"/>
        <Button
                android:text="@string/restartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/restartButton"
                app:layout_column="0"
                app:layout_row="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"/>
        <Button
                android:text="@string/quitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quitButton"
                app:layout_column="0"
                app:layout_row="2"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"/>
    </android.support.v7.widget.GridLayout>
</RelativeLayout>
