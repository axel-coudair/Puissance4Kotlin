<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_playerName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:padding="20dp" tools:text="@tools:sample/cities"/>
    <TextView
            android:id="@+id/tv_playerVictory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:padding="20dp" tools:text="@tools:sample/cities"/>
    <TextView
            android:id="@+id/tv_playerDefeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:padding="20dp" tools:text="@tools:sample/cities"/>

</LinearLayout>